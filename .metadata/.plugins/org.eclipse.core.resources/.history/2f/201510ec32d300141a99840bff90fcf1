package main;
import launcher.Launcher;
import odometer.Odometer;
import odometer.OdometerCorrection;
import data.DataCenter;
import drivers.CSPoller;
import drivers.HWConstants;
import drivers.Navigation;
import drivers.USPoller;
import util.Point;
import util.Util;
import lejos.nxt.Button;
import lejos.nxt.SensorPort;
import lejos.nxt.Sound;
import lejos.nxt.UltrasonicSensor;
import localization.CSLocalizer;
import localization.USLocalizer;

/**
 * The main class. Initializes the threads of execution
 * and starts them.
 * 
 * @author Andrei Purcarus
 * @author Leotard Niyonkuru
 */
public class Mapped {
	private static final int CLOSE = 2;
	private static final int OFFSET = 0;
	/**
	 * Time to wait during a pause in ms.
	 */
	private static final long TIMEOUT = 100;

	/**
	 * Main thread of execution of the robot. Starts all other threads.
	 */
	public static void main(String [] args) {
		//Wait for a button to start.
		int buttonChoice = Button.waitForAnyPress();
		switch (buttonChoice) {
		case Button.ID_ENTER: case Button.ID_LEFT: case Button.ID_RIGHT:
			break;
		case Button.ID_ESCAPE:
			return;
		default:
			throw new RuntimeException("Impossible button press.");
		}

		//The destination.
		final Point destination = new Point(2*HWConstants.TILE_DISTANCE, 
				2*HWConstants.TILE_DISTANCE);
		//The number of shots to fire at each target.
		final int shots = 3;
		
		//Initializes the threads.
		final DataCenter dc = new DataCenter();
		final Odometer odo = new Odometer(dc);
		final OdometerCorrection oc = new OdometerCorrection(dc);
		final Navigation nav = new Navigation(dc);
		final USPoller usLeft = new USPoller(180, dc);
		final USPoller usFront = new USPoller(90, dc);
		final CSPoller cs = new CSPoller(dc);
		final USLocalizer usl = new USLocalizer(dc, nav);
		final CSLocalizer ll = new CSLocalizer(dc, nav);
		final Launcher launcher = new Launcher(HWConstants.LAUNCHER_MOTOR);
		final UltrasonicSensor usleft = new UltrasonicSensor(SensorPort.S1);
		final UltrasonicSensor usright = new UltrasonicSensor(SensorPort.S3);

		//Starts the threads.
		odo.start();
		usFront.start();
		//usLeft.start();
		cs.start();

		(new Thread() {
			public void run() {
				
				usl.doLocalization();
				//Pauses to allow other threads to update.
				pause();
				//Travels to 0 for the light localization.
				nav.travelTo(0 + OFFSET, 0 + OFFSET, false, 300);
				//Turns to 45 degrees for the light localization.
				nav.turnTo(45, 200);
				ll.doLocalization();
				//Pauses to allow other threads to update.
				pause();
				
				double left = 0, right = 0;
				
				//Gets to destination.
				oc.start();
				nav.travelTo(convert(-0.5), convert(2.5), false);
				nav.travelTo(convert(-0.5), convert(3.5), false);
				usleft.ping();
				usright.ping();
				try {
					Thread.sleep(20);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				left = usleft.getDistance();
				right = usright.getDistance();
				nav.travelTo(convert(-0.5), convert(4.5), false);
				usleft.ping();
				usright.ping();
				try {
					Thread.sleep(20);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				double newleft = usleft.getDistance();
				double newright = usright.getDistance();
				if (newleft < newright / CLOSE || newright < newleft / CLOSE) {
					double[] xyt = dc.getXYT();
					dc.setXYT(xyt[0], xyt[1], Math.toDegrees(Math.atan2(convert(1), newleft - left)));
				}
				nav.travelTo(convert(-0.5), convert(5.0), false);
				nav.travelTo(convert(-0.35), convert(5.35), false, 300);
				nav.travelTo(convert(0), convert(5.5), false, 300);
				nav.travelTo(convert(1), convert(5.5), false);
				nav.travelTo(convert(1.35), convert(5.65), false);
				nav.travelTo(convert(1.5), convert(6.0), false);
				nav.travelTo(convert(1.65), convert(6.35), false);
				nav.travelTo(convert(2), convert(6.5), false);
				nav.travelTo(convert(4.5), convert(6.5), false);
				nav.travelTo(convert(6) + OFFSET, convert(6) + OFFSET, false, 300);
				oc.stop();
				//Turns to 45 degrees for the light localization.
				nav.turnTo(45);
				ll.doLocalization(convert(6), convert(6));
				//Pauses to allow other threads to update.
				pause();
				
				turnToLaunch(convert(6), convert(6), convert(6), convert(2), nav);
				//Tells the slave NXT to fire shots times.
				launcher.fire(shots);
				
				//Turns to 45 degrees for the light localization.
				nav.travelTo(convert(6) + OFFSET, convert(6) + OFFSET, false, 300);
				nav.turnTo(45);
				ll.doLocalization(convert(6), convert(6));
				//Pauses to allow other threads to update.
				pause();
				
				//Returns to origin.
				oc.start();
				nav.travelTo(convert(4.5), convert(6.5), false);
				nav.travelTo(convert(2.5), convert(6.5), false);
				usleft.ping();
				usright.ping();
				try {
					Thread.sleep(20);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				left = usleft.getDistance();
				right = usright.getDistance();
				if (left < right / CLOSE || right < left / CLOSE) {
					double[] xyt = dc.getXYT();
					if (left < right / CLOSE)
						dc.setXYT(xyt[0], xyt[1], Util.toRange(xyt[2] - 5, 0.0, false));
					else
						dc.setXYT(xyt[0], xyt[1], Util.toRange(xyt[2] + 5, 0.0, false));
				}
				nav.travelTo(convert(2), convert(6.5), false);
				nav.travelTo(convert(1.65), convert(6.35), false);
				nav.travelTo(convert(1.5), convert(6), false);
				nav.travelTo(convert(1.35), convert(5.65), false);
				nav.travelTo(convert(1), convert(5.5), false);
				nav.travelTo(convert(0), convert(5.5), false);
				nav.travelTo(convert(-0.35), convert(5.35), false);
				nav.travelTo(convert(-0.5), convert(5), false, 300);
				nav.travelTo(convert(-0.5), convert(4.5), false, 300);
				usleft.ping();
				usright.ping();
				try {
					Thread.sleep(20);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				left = usleft.getDistance();
				right = usright.getDistance();
				nav.travelTo(convert(-0.5), convert(3.5), false, 300);
				usleft.ping();
				usright.ping();
				try {
					Thread.sleep(20);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				newleft = usleft.getDistance();
				newright = usright.getDistance();
				if (newleft < newright / CLOSE || newright < newleft / CLOSE) {
					double[] xyt = dc.getXYT();
					dc.setXYT(xyt[0], xyt[1], Math.toDegrees(Math.atan2(convert(-1), newleft - left)));
				}
				nav.travelTo(convert(-0.5), convert(2.5), false, 300);
				nav.travelTo(convert(0), convert(0), false, 300);
				oc.stop();
				usl.doLocalization();
				//Turns to 45 degrees for the light localization.
				nav.travelTo(convert(0) + OFFSET, convert(0) + OFFSET, false);
				nav.turnTo(45);
				ll.doLocalization();
				//Pauses to allow other threads to update.
				pause();
				nav.travelTo(0, 0, false);
				nav.turnTo(90.0);
				
				//Tells the slave to exit.
				
				System.exit(0);
			}
		}).start();
		
		//Wait for another button press to exit.
		Button.waitForAnyPress();
		System.exit(0);
	}
	
	/**
	 * Pauses the current thread for a period of TIMEOUT ms.
	 */
	private static void pause() {
		try {
			Thread.sleep(TIMEOUT);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
	
	private static double convert(double x) {
		return x * HWConstants.TILE_DISTANCE;
	}
	
	private static void turnToLaunch(double destX, double destY, double x, double y, Navigation nav) {
		double angle = Math.atan2(y - destY, x - destX);
		double xx = HWConstants.LAUNCH_DISTANCE * Math.cos(angle);
		double yy = HWConstants.LAUNCH_DISTANCE * Math.sin(angle);
		nav.travelTo(x - xx, y - yy, false, 300);
		nav.turnTo(Util.toRange(Math.toDegrees(angle) - HWConstants.LAUNCH_ANGLE, 0.0, false), 200);
	}
}
